doctype html
html
    head 
        title knowledgebase 
        link(rel="stylesheet", href="css/reset.css")
        link(rel="stylesheet", href="css/main.css")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css")
        link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i")
        link(rel="preconnect", href="https://fonts.gstatic.com")
    header#header.header.fixed-top.d-flex.align-items-center 
        .d-flex.align-items-center.justify-content-between 
            a.logo.d-flex.align-items.center(href="/home")
                span.d-none.d-lg-block Admin 
            i.bi.bi-list.toggle-sidebar-btn 
        nav.header-nav.ms-auto 
            ul.d-flex.align-items-center 
                li.nav-item.dropdown.pe-3 
                    a.nav-link.nav-profile.d-flex.align-items-center.pe-0(href="#" data-bs-toggle="dropdown")
                        span.d-none.d-md-block.dropdown-toggle.ps-2 Admin
                    ul.dropdown-menu.dropdown-menu-end.dropdown-menu-arrow.profile 
                        li.dropdown-header 
                            h6 admin
                        li 
                            hr.dropdown-divider
                        li 
                            a.dropdown-item.d-flex.align-items-center(href="logout")
                                i.bi.bi-box-arrow-right 
                                span Sign Out 
    aside#sidebar.sidebar
        ul.sidebar-nav#sidebar-nav 
            li.nav-item 
                a.nav-link(href="/home")
                    i.bi.bi-grid 
                    span Dashboard 
            li.nav-item
                a.nav-link.collapsed(href="/add-student")
                    i.bi.bi-plus-lg
                    span Add Student 
            li.nav-item 
                a.nav-link.collapsed(href="/verify-student")
                    i.bi.bi-person-check 
                    span Verify Student
            li.nav-item 
                a.nav-link.collapsed(href="/all-students")
                    i.bi.bi-menu-button-wide  
                    span View All Students
            li.nav-item 
                a.nav-link.collapsed(href="/logout")
                    i.bi.bi-box-arrow-left 
                    span Logout
       

    body
        block layout-content
    footer 
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js")
        script(defer src="js/face-api.min.js" type="module") 
        script(defer src="js/main.js" type="module")
