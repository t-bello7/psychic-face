extends layout 
block layout-content 
    section.index.home
        div.homeView.container
            //- div.register-form
            div
                h1 Register A Student 
                div 
                    form(action="" class="register" method="POST" enctype="multipart/form-data")
                        div
                            label(for="firstName") First Name
                            input(type="text" id="first_name" name="firstName" placeholder="First Name")
                        div
                            label(for="lastName") Last Name
                            input(type="text" id="last_name" name="lastName" placeholder="Last Name")
                        
                        div.flex
                            span#start-camera Start Camera

                            div
                                video(src="" autoplay="true" width="320" height="240")#video
                 
                                span#take-picture Take Picture

                                canvas(width="320" height="240")#canvas

                            div
                                label(for="studentImage") Upload Image   
                                input(type="file" name="studentImage" value="" id="student_image")
                        input(type="submit", value="Submit" class="NavButton")
                        
            //- div.registered-student
            div
                h1 List of Registered Student
                div 
                    each item, i in items 
                        li= item.first_name
                    form(action="" class="check" method="POST" enctype="multipart/form-data")
                        div
                            label(for="checkImage") Upload an Image you want to check 
                            input(type="file" name="checkImage" id="check_image")
                        input(type="submit", value="Check" class="NavButton")
                a(href="/check")
                    div.NavButton check
        //- section.modal 
        section
            a(href="/logout")
                div.NavButton Logout
        script(src="js/main.js" type="module")
        
